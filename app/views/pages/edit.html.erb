<h1>Editing page</h1>

<% form_for(@page) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :page_type %><br />
    <%= f.text_field :page_type %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
    <div>
    <%= f.label :default %>
    <%= f.check_box :default %>
  </div>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

